<configs>


  <append xpath="/blocks">
    <block name="Carousel">
      <property name="Class" value="MusicBox, SCore"/>
      <!-- Music Box Class -->
      <!-- SoundDataNode reference -->
      <property name="SoundDataNode" value="christmasmusic01" />

      <!-- The prefab where the AudioSource and Animator exists -->
      <!-- Example: #@modfolder:Resources/Carousel.unity3d?Carousel_X -->
      <!-- The AudioSource would be   Carousel_X  -->


      <property name="Model" value="#@modfolder:Resources/XmasCarousel.unity3d?Carousel_X" />
      <property name="AudioSource" value="CarouselNoMesh_X" />
      <!-- Carousel Model by SkyeSladeUT is licensed under CC Attribution -->
      <property name="DescriptionKey" value="A charming musical carousel"/>
      <property name="Material" value="Mwood"/>
      <property name="Shape" value="ModelEntity" />
      <property name="CustomIcon" value="xmasCarousel" />
      <property name="Path" value="solid"/>
      <property name="StabilitySupport" value="false"/>
      <property name="OnlySimpleRotations" value="true"/>
      <property name="CanPickup" value="true" />
      <property name="Collide" value="movement,melee,bullet,arrow,rocket"/>
      <property name="LootList" value="storageCrate"/>
    </block>

    <!--  The rules for playing a video are done in such an order:
				If VideoSource is an asset bundle, try to load a clip from it.
				If no vidoe clip is detected, then it'll check for a built-in clip -->

    <block name="VideoPlayer">
      <property name="Class" value="MusicBox, SCore"/>
      <!-- Music Box Class -->
      <!-- Video Player Model by TechnoCraft is licensed under CC Attribution -->
      <property name="Model" value="#@modfolder:Resources/VideoPlayers.unity3d?VideoPlayer_X" />
      <property name="Place" value="TowardsPlacerInverted"/>
      <property name="Material" value="Mmetal"/>
      <property name="Shape" value="ModelEntity" />
      <property name="CustomIcon" value="VideoPlayer" />
      <property name="Path" value="solid"/>
      <property name="StabilitySupport" value="false"/>
      <property name="OnlySimpleRotations" value="true"/>
      <property name="CanPickup" value="true" />
      <property name="Collide" value="movement,melee,bullet,arrow,rocket"/>
      <property name="LootList" value="storageCrate"/>
    </block>

    <block name="VideoPlayerTV">
      <property name="Class" value="MusicBox, SCore"/>
      <!-- Video Player TV Model by VX-Designs is licensed under CC Attribution -->
      <property name="Model" value="#@modfolder:Resources/VideoPlayers.unity3d?VideoPlayerTV_X" />
      <property name="Place" value="TowardsPlacerInverted"/>
      <property name="Material" value="Mmetal"/>
      <property name="Shape" value="ModelEntity" />
      <property name="CustomIcon" value="VideoPlayer" />
      <property name="Path" value="solid"/>
      <property name="StabilitySupport" value="false"/>
      <property name="OnlySimpleRotations" value="true"/>
      <property name="CanPickup" value="true" />
      <property name="Collide" value="movement,melee,bullet,arrow,rocket"/>
      <property name="LootList" value="storageCrate"/>
    </block>


  </append>
</configs>

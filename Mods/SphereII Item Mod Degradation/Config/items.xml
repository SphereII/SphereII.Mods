<configs>
    
    <append xpath="//item[starts-with(@name,'tool')]">
        <!-- Read the snippet file, and merge all the Snippet nodes that match the label. -->
        <!-- If label is omitted, the file itself will be merged, minus the root node -->
        <ref_file snippet="ItemModifiers/StandardSettings.xml" label="StandardItemActiveSettings, StandardSettings"/>

        <!-- Make the tools degrade over a longer period of time, as they fire more often -->
        <property name="DegradationMaxUse" value="1000,6000" param1="1,6"/>
        <property name="DegradationPerUse" value="100"/>
    </append>
    
    <append xpath="//item[@name='toolAnvil']/effect_group[@tiered='false']">
        <requirement name="ItemPercentUsed, SCore" operation="LT" value="1"/>
    </append>

    <append xpath="//item[@name='meleeToolFlashlight02']">
        <!-- Read the snippet file, and merge all the Snippet nodes that match the label. -->
        <!-- If label is omitted, the file itself will be merged, minus the root node -->
        <ref_file snippet="ItemModifiers/StandardSettings.xml" label="StandardItemActiveSettings, StandardSettings"/>
    </append>
        
    <append xpath="//item[@name='meleeToolFlashlight02']//triggered_effect[@trigger='onSelfItemActivate']">
        <requirement name="ItemPercentUsed, SCore" operation="LT" value="1" />
    </append>
    
</configs>


<configs>
	<append xpath="/buffs/buff[@name='buffLBD_PerceptionManager']">
		<effect_group name="Javelin Master">
			<requirement name="HoldingItemHasTags" tags="perkJavelinMaster"/>
			<requirement name="EntityTagCompare" target="other" tags="zombie,animal"/>

			<triggered_effect trigger="onSelfPrimaryActionRayHit" action="ModifyCVar" cvar="$perkjavelinmaster_lbd_xp" operation="add" value="@$lbd_xp_melee_base">
				<requirement name="IsAlive" target="other"/>
				<requirement name="NotHasBuff" buff="buffLBD_perkJavelinMaster_XPCoolDown"/>
			</triggered_effect>
			<triggered_effect trigger="onSelfPrimaryActionRayHit" action="AddBuff" buff="buffLBD_perkJavelinMaster_XPCoolDown">
				<requirement name="IsAlive" target="other"/>
				<requirement name="NotHasBuff" buff="buffLBD_perkJavelinMaster_XPCoolDown"/>
			</triggered_effect>
			<triggered_effect trigger="onSelfPrimaryActionRayHit" action="AddBuff" buff="buffLBD_perkJavelinMaster_LevelUpCheck">
				<requirement name="IsAlive" target="other"/>
				<requirement name="CVarCompare" cvar="$perkjavelinmaster_lbd_xp" operation="GTE" value="@$perkjavelinmaster_lbd_xptonext"/>
			</triggered_effect>

			<triggered_effect trigger="onSelfSecondaryActionRayHit" action="ModifyCVar" cvar="$perkjavelinmaster_lbd_xp" operation="add" value="@$lbd_xp_melee_power_base">
				<requirement name="IsAlive" target="other"/>
				<requirement name="NotHasBuff" buff="buffLBD_perkJavelinMaster_XPCoolDown"/>
			</triggered_effect>
			<triggered_effect trigger="onSelfSecondaryActionRayHit" action="AddBuff" buff="buffLBD_perkJavelinMaster_XPCoolDown">
				<requirement name="IsAlive" target="other"/>
				<requirement name="NotHasBuff" buff="buffLBD_perkJavelinMaster_XPCoolDown"/>
			</triggered_effect>
			<triggered_effect trigger="onSelfSecondaryActionRayHit" action="AddBuff" buff="buffLBD_perkJavelinMaster_LevelUpCheck">
				<requirement name="IsAlive" target="other"/>
				<requirement name="CVarCompare" cvar="$perkjavelinmaster_lbd_xp" operation="GTE" value="@$perkjavelinmaster_lbd_xptonext"/>
			</triggered_effect>

			<triggered_effect trigger="onSelfPrimaryActionRayHit" action="LogMessage" message="LBD DEBUG: Javelin Master Primary - Attempting XP Gain (+@$lbd_xp_melee_base)">
				<requirement name="IsAlive" target="other"/>
				<requirement name="NotHasBuff" buff="buffLBD_perkJavelinMaster_XPCoolDown"/>
				<requirement name="HasBuff" buff="god"/>
			</triggered_effect>
			<triggered_effect trigger="onSelfSecondaryActionRayHit" action="LogMessage" message="LBD DEBUG: Javelin Master Secondary (Throw) - Attempting XP Gain (+@$lbd_xp_melee_power_base)">
				<requirement name="IsAlive" target="other"/>
				<requirement name="NotHasBuff" buff="buffLBD_perkJavelinMaster_XPCoolDown"/>
				<requirement name="HasBuff" buff="god"/>
			</triggered_effect>
		</effect_group>
	</append>
	<append xpath="/buffs">
		<buff name="buffLBD_perkJavelinMaster_LevelUpCheck" hidden="true">
			<stack_type value="ignore"/>
			<duration value="1"/>
			<effect_group>
				<requirement name="CanPurchasePerk, SCore" progression_name="perkJavelinMaster" />

				<triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkJavelinMaster" level="1"/>
				<triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkjavelinmaster_lbd_xp" operation="subtract" value="@$perkjavelinmaster_lbd_xptonext"/>
				<triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkjavelinmaster_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
				<triggered_effect trigger="onSelfBuffStart" action="ShowToolbeltMessage" message_key="perkJavelinMasterLeveledUp"/>
			</effect_group>
			<effect_group>
				<requirement name="!CanPurchasePerk, SCore" progression_name="perkJavelinMaster" />
				<triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Javelin Master - Level Up FAILED. Perk is locked by requirements.">
					<requirement name="HasBuff" buff="god"/>
				</triggered_effect>
			</effect_group>
		</buff>
	</append>
</configs>
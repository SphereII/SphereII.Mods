<configs>
    <!-- Append the LBD logic for Charismatic Nature to the main Intellect Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_IntellectManager']">
        <effect_group name="Charismatic Nature">
            <!-- XP Gain: Rewarding items SOLD to the trader -->
            <triggered_effect trigger="onSelfItemSold" action="LogMessage" message="LBD DEBUG: Charismatic Nature - Attempting Sold Item XP (+@$lbd_xp_attribute_synergy_base)">
                <requirement name="CVarCompare" cvar="_last_item_value" operation="GT" value="0"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemSold" action="ModifyCVar" cvar="$perkcharismaticnature_lbd_xp" operation="add" value="@$lbd_xp_attribute_synergy_base">
                <requirement name="CVarCompare" cvar="_last_item_value" operation="GT" value="0"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown"/>
            </triggered_effect>

            <!-- XP Gain: Rewarding items BOUGHT from the trader -->
            <triggered_effect trigger="onSelfItemBought" action="LogMessage" message="LBD DEBUG: Charismatic Nature - Attempting Bought Item XP (+@$lbd_xp_attribute_synergy_base)">
                <requirement name="CVarCompare" cvar="_last_item_value" operation="GT" value="0"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemBought" action="ModifyCVar" cvar="$perkcharismaticnature_lbd_xp" operation="add" value="@$lbd_xp_attribute_synergy_base">
                <requirement name="CVarCompare" cvar="_last_item_value" operation="GT" value="0"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown"/>
            </triggered_effect>

            <!-- NEW: XP Gain: Rewarding Quest Completion -->
            <triggered_effect trigger="onSelfQuestComplete" action="LogMessage" message="LBD DEBUG: Charismatic Nature - Attempting Quest Complete XP (+@$lbd_xp_quest_base)">
                <requirement name="CVarCompare" cvar="$completedQuestTier" operation="GTE" value="1"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfQuestComplete" action="ModifyCVar" cvar="$perkcharismaticnature_lbd_xp" operation="add" value="@$lbd_xp_quest_base">
                <requirement name="CVarCompare" cvar="$completedQuestTier" operation="GTE" value="1"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onSelfItemSold" action="LogMessage" message="LBD DEBUG: Charismatic Nature - Applying Cooldown (Sold)">
                <requirement name="CVarCompare" cvar="_last_item_value" operation="GT" value="0"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemSold" action="AddBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown">
                <requirement name="CVarCompare" cvar="_last_item_value" operation="GT" value="0"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemBought" action="LogMessage" message="LBD DEBUG: Charismatic Nature - Applying Cooldown (Bought)">
                <requirement name="CVarCompare" cvar="_last_item_value" operation="GT" value="0"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemBought" action="AddBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown">
                <requirement name="CVarCompare" cvar="_last_item_value" operation="GT" value="0"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfQuestComplete" action="LogMessage" message="LBD DEBUG: Charismatic Nature - Applying Cooldown (Quest)">
                <requirement name="CVarCompare" cvar="$completedQuestTier" operation="GTE" value="1"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfQuestComplete" action="AddBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown">
                <requirement name="CVarCompare" cvar="$completedQuestTier" operation="GTE" value="1"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkCharismaticNature_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfItemSold" action="LogMessage" message="LBD DEBUG: Charismatic Nature - Triggering Level Up Check (Sold)">
                <requirement name="CVarCompare" cvar="_last_item_value" operation="GT" value="0"/>
                <requirement name="CVarCompare" cvar="$perkcharismaticnature_lbd_xp" operation="GTE" value="@$perkcharismaticnature_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemSold" action="AddBuff" buff="buffLBD_perkCharismaticNature_LevelUpCheck">
                <requirement name="CVarCompare" cvar="_last_item_value" operation="GT" value="0"/>
                <requirement name="CVarCompare" cvar="$perkcharismaticnature_lbd_xp" operation="GTE" value="@$perkcharismaticnature_lbd_xptonext"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemBought" action="LogMessage" message="LBD DEBUG: Charismatic Nature - Triggering Level Up Check (Bought)">
                <requirement name="CVarCompare" cvar="_last_item_value" operation="GT" value="0"/>
                <requirement name="CVarCompare" cvar="$perkcharismaticnature_lbd_xp" operation="GTE" value="@$perkcharismaticnature_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemBought" action="AddBuff" buff="buffLBD_perkCharismaticNature_LevelUpCheck">
                <requirement name="CVarCompare" cvar="_last_item_value" operation="GT" value="0"/>
                <requirement name="CVarCompare" cvar="$perkcharismaticnature_lbd_xp" operation="GTE" value="@$perkcharismaticnature_lbd_xptonext"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfQuestComplete" action="LogMessage" message="LBD DEBUG: Charismatic Nature - Triggering Level Up Check (Quest)">
                <requirement name="CVarCompare" cvar="$completedQuestTier" operation="GTE" value="1"/>
                <requirement name="CVarCompare" cvar="$perkcharismaticnature_lbd_xp" operation="GTE" value="@$perkcharismaticnature_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfQuestComplete" action="AddBuff" buff="buffLBD_perkCharismaticNature_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$completedQuestTier" operation="GTE" value="1"/>
                <requirement name="CVarCompare" cvar="$perkcharismaticnature_lbd_xp" operation="GTE" value="@$perkcharismaticnature_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Charismatic Nature. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkCharismaticNature_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="CanPurchasePerk, SCore" progression_name="perkCharismaticNature" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkCharismaticNature" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkcharismaticnature_lbd_xp" operation="subtract" value="@$perkcharismaticnature_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkcharismaticnature_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowToolbeltMessage" message_key="perkCharismaticNatureLeveledUp"/>
            </effect_group>
            <effect_group>
                <requirement name="!CanPurchasePerk, SCore" progression_name="perkCharismaticNature" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Charismatic Nature - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
<configs>
    <append xpath="/buffs/buff[@name='buffLBD_IntellectManager']">
        <effect_group name="Better Barter">
            <triggered_effect trigger="onSelfItemSold" action="LogMessage" message="LBD DEBUG: Better Barter - Attempting Sold Item XP (+@$lbd_xp_attribute_synergy_base)">
                <requirement name="CVarCompare" cvar="_sellPrice" operation="GT" value="20"/> 
                <requirement name="NotHasBuff" buff="buffLBD_perkBetterBarter_SoldCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemSold" action="ModifyCVar" cvar="$perkbetterbarter_lbd_xp" operation="add" value="@$lbd_xp_attribute_synergy_base">
                <requirement name="CVarCompare" cvar="_sellPrice" operation="GT" value="20"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkBetterBarter_SoldCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemBought" action="LogMessage" message="LBD DEBUG: Better Barter - Attempting Bought Item XP (+@$lbd_xp_attribute_synergy_base)">
                <requirement name="CVarCompare" cvar="_buyPrice" operation="GT" value="20"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkBetterBarter_BoughtCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemBought" action="ModifyCVar" cvar="$perkbetterbarter_lbd_xp" operation="add" value="@$lbd_xp_attribute_synergy_base">
                <requirement name="CVarCompare" cvar="_buyPrice" operation="GT" value="20"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkBetterBarter_BoughtCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemSold" action="LogMessage" message="LBD DEBUG: Better Barter - Applying Cooldown (Sold)">
                <requirement name="CVarCompare" cvar="_sellPrice" operation="GT" value="20"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkBetterBarter_SoldCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemSold" action="AddBuff" buff="buffLBD_perkBetterBarter_SoldCoolDown">
                <requirement name="CVarCompare" cvar="_sellPrice" operation="GT" value="20"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkBetterBarter_SoldCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemBought" action="LogMessage" message="LBD DEBUG: Better Barter - Applying Cooldown (Bought)">
                <requirement name="CVarCompare" cvar="_buyPrice" operation="GT" value="20"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkBetterBarter_BoughtCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemBought" action="AddBuff" buff="buffLBD_perkBetterBarter_BoughtCoolDown">
                <requirement name="CVarCompare" cvar="_buyPrice" operation="GT" value="20"/>
                <requirement name="NotHasBuff" buff="buffLBD_perkBetterBarter_BoughtCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemSold" action="LogMessage" message="LBD DEBUG: Better Barter - Triggering Level Up Check (Sold)">
                <requirement name="CVarCompare" cvar="_sellPrice" operation="GT" value="20"/>
                <requirement name="CVarCompare" cvar="$perkbetterbarter_lbd_xp" operation="GTE" value="@$perkbetterbarter_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemSold" action="AddBuff" buff="buffLBD_perkBetterBarter_LevelUpCheck">
                <requirement name="CVarCompare" cvar="_sellPrice" operation="GT" value="20"/>
                <requirement name="CVarCompare" cvar="$perkbetterbarter_lbd_xp" operation="GTE" value="@$perkbetterbarter_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemBought" action="LogMessage" message="LBD DEBUG: Better Barter - Triggering Level Up Check (Bought)">
                <requirement name="CVarCompare" cvar="_buyPrice" operation="GT" value="20"/>
                <requirement name="CVarCompare" cvar="$perkbetterbarter_lbd_xp" operation="GTE" value="@$perkbetterbarter_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemBought" action="AddBuff" buff="buffLBD_perkBetterBarter_LevelUpCheck">
                <requirement name="CVarCompare" cvar="_buyPrice" operation="GT" value="20"/>
                <requirement name="CVarCompare" cvar="$perkbetterbarter_lbd_xp" operation="GTE" value="@$perkbetterbarter_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <append xpath="/buffs">
        <buff name="buffLBD_perkBetterBarter_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="!RequirementIsProgressionLocked, SCore" progression_name="perkBetterBarter" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkBetterBarter" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkbetterbarter_lbd_xp" operation="subtract" value="@$perkbetterbarter_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkbetterbarter_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="perkBetterBarter" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="RequirementIsProgressionLocked, SCore" progression_name="perkBetterBarter" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Better Barter - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>

        <buff name="buffLBD_perkBetterBarter_SoldCoolDown" hidden="true"><duration value="5"/></buff>

        <buff name="buffLBD_perkBetterBarter_BoughtCoolDown" hidden="true"><duration value="5"/></buff>
    </append>
</configs>
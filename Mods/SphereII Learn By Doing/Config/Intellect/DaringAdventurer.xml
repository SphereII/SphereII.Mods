<configs>
    <!-- Append the LBD logic for Daring Adventurer to the main Intellect Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_IntellectManager']">
        <effect_group name="Daring Adventurer">
            <!-- Master requirement for the entire group. -->
            <requirement name="CVarCompare" cvar="$completedQuestTier" operation="GTE" value="1"/>

            <!-- XP Gain: Base XP for completing any quest -->
            <triggered_effect trigger="onSelfQuestComplete" action="LogMessage" message="LBD DEBUG: Daring Adventurer - Attempting Base Quest XP (+@$lbd_xp_quest_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkDaringAdventurer_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfQuestComplete" action="ModifyCVar" cvar="$perkdaringadventurer_lbd_xp" operation="add" value="@$lbd_xp_quest_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkDaringAdventurer_XPCoolDown"/>
            </triggered_effect>

            <!-- XP Gain: Bonus XP for higher quest tiers (Correct Calculation) -->
            <triggered_effect trigger="onSelfQuestComplete" action="ModifyCVar" cvar="$temp_quest_xp_bonus" operation="set" value="@$completedQuestTier">
                <requirement name="NotHasBuff" buff="buffLBD_perkDaringAdventurer_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfQuestComplete" action="ModifyCVar" cvar="$temp_quest_xp_bonus" operation="multiply" value="@$lbd_xp_quest_tier_multiplier">
                <requirement name="NotHasBuff" buff="buffLBD_perkDaringAdventurer_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfQuestComplete" action="LogMessage" message="LBD DEBUG: Daring Adventurer - Attempting Tier Bonus XP (+@$temp_quest_xp_bonus)">
                <requirement name="NotHasBuff" buff="buffLBD_perkDaringAdventurer_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfQuestComplete" action="ModifyCVar" cvar="$perkdaringadventurer_lbd_xp" operation="add" value="@$temp_quest_xp_bonus">
                <requirement name="NotHasBuff" buff="buffLBD_perkDaringAdventurer_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onSelfQuestComplete" action="LogMessage" message="LBD DEBUG: Daring Adventurer - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkDaringAdventurer_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfQuestComplete" action="AddBuff" buff="buffLBD_perkDaringAdventurer_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkDaringAdventurer_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfQuestComplete" action="LogMessage" message="LBD DEBUG: Daring Adventurer - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkdaringadventurer_lbd_xp" operation="GTE" value="@$perkdaringadventurer_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfQuestComplete" action="AddBuff" buff="buffLBD_perkdaringadventurer_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkdaringadventurer_lbd_xp" operation="GTE" value="@$perkdaringadventurer_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Daring Adventurer. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkDaringAdventurer_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="!RequirementIsProgressionLocked, SCore" progression_name="perkDaringAdventurer" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkDaringAdventurer" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkdaringadventurer_lbd_xp" operation="subtract" value="@$perkdaringadventurer_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkdaringadventurer_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="perkDaringAdventurer" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="RequirementIsProgressionLocked, SCore" progression_name="perkDaringAdventurer" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Daring Adventurer - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
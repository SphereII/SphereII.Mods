<configs>
    <!-- Append the LBD logic for Hard Target to the main Agility Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_AgilityManager']">
        <effect_group name="Hard Target">
            <!-- Master requirements for the entire group. -->
            <requirement name="EntityTagCompare" target="other" tags="walker,animal"/> <!-- Damage must be from a valid threat. -->
            <requirements compare_type="or">
                <requirement name="EntityHasMovementTag" tags="running"/>
                <requirement name="EntityHasMovementTag" tags="walking"/>
            </requirements>
            <requirement name="IsAlive" target="self"/> <!-- Ensure player is alive after taking damage -->

            <!-- XP Gain -->
            <triggered_effect trigger="onOtherDamagedSelf" action="LogMessage" message="LBD DEBUG: Hard Target - Attempting Moving Defense XP (+@$lbd_xp_damage_taken_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkHardTarget_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onOtherDamagedSelf" action="ModifyCVar" cvar="$perkhardtarget_lbd_xp" operation="add" value="@$lbd_xp_damage_taken_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkHardTarget_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onOtherDamagedSelf" action="LogMessage" message="LBD DEBUG: Hard Target - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkHardTarget_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onOtherDamagedSelf" action="AddBuff" buff="buffLBD_perkHardTarget_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkHardTarget_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onOtherDamagedSelf" action="LogMessage" message="LBD DEBUG: Hard Target - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkhardtarget_lbd_xp" operation="GTE" value="@$perkhardtarget_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onOtherDamagedSelf" action="AddBuff" buff="buffLBD_perkHardTarget_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkhardtarget_lbd_xp" operation="GTE" value="@$perkhardtarget_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Hard Target. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkHardTarget_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="CanPurchasePerk, SCore" progression_name="perkHardTarget" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkHardTarget" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkhardtarget_lbd_xp" operation="subtract" value="@$perkhardtarget_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkhardtarget_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="perkHardTarget" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="!CanPurchasePerk, SCore" progression_name="perkHardTarget" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Hard Target - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
<configs>
    <!-- Append the LBD logic for From the Shadows to the main Agility Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_AgilityManager']">
        <effect_group name="From the Shadows">
            <!-- Master requirements for the entire group. -->
            <requirement name="CVarCompare" cvar="_crouching" operation="Equals" value="1"/>
            <requirement name="CVarCompare" cvar="_lightlevel" operation="LTE" value="65"/> <!-- From perk description -->
            <requirements compare_type="or">
                <requirement name="EntityHasMovementTag" tags="running"/>
                <requirement name="EntityHasMovementTag" tags="walking"/>
            </requirements>

            <!-- XP Gain -->
            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: From the Shadows - Attempting Stealth Walk XP (+@$lbd_xp_attribute_synergy_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkFromTheShadows_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfRun" action="ModifyCVar" cvar="$perkfromtheshadows_lbd_xp" operation="add" value="@$lbd_xp_attribute_synergy_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkFromTheShadows_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="LogMessage" message="LBD DEBUG: From the Shadows - Attempting Stealth Walk XP (+@$lbd_xp_attribute_synergy_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkFromTheShadows_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="ModifyCVar" cvar="$perkfromtheshadows_lbd_xp" operation="add" value="@$lbd_xp_attribute_synergy_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkFromTheShadows_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: From the Shadows - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkFromTheShadows_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfRun" action="AddBuff" buff="buffLBD_perkFromTheShadows_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkFromTheShadows_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="LogMessage" message="LBD DEBUG: From the Shadows - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkFromTheShadows_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="AddBuff" buff="buffLBD_perkFromTheShadows_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkFromTheShadows_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: From the Shadows - Triggering Level Up Check (Run)">
                <requirement name="CVarCompare" cvar="$perkfromtheshadows_lbd_xp" operation="GTE" value="@$perkfromtheshadows_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfRun" action="AddBuff" buff="buffLBD_perkFromTheShadows_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkfromtheshadows_lbd_xp" operation="GTE" value="@$perkfromtheshadows_lbd_xptonext"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="LogMessage" message="LBD DEBUG: From the Shadows - Triggering Level Up Check (Walk)">
                <requirement name="CVarCompare" cvar="$perkfromtheshadows_lbd_xp" operation="GTE" value="@$perkfromtheshadows_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="AddBuff" buff="buffLBD_perkFromTheShadows_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkfromtheshadows_lbd_xp" operation="GTE" value="@$perkfromtheshadows_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for From the Shadows. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkFromTheShadows_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="CanPurchasePerk, SCore" progression_name="perkFromTheShadows" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkFromTheShadows" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkfromtheshadows_lbd_xp" operation="subtract" value="@$perkfromtheshadows_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkfromtheshadows_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="perkFromTheShadows" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="!CanPurchasePerk, SCore" progression_name="perkFromTheShadows" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: From the Shadows - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
<!--
     ====================================================================================================
     =========================== AGILITY MASTERY LEARN BY DOING (LBD) SYSTEM ============================
     ====================================================================================================

     This file defines the Level-Up Handler buff for perkAgilityMastery.

     HOW IT WORKS:
     perkAgilityMastery is a "Mastery Perk," meaning its progression is NOT driven by accumulating XP
     from specific actions. Instead, it levels up automatically as the player increases their
     main Agility attribute. This represents a holistic mastery of Agility-related skills.

     -   **Progression Trigger:** When the player's main `attAgility` attribute levels up,
         the `buffLBD_attAgility_LevelUpCheck` buff will trigger this Mastery LevelUpCheck.
     -   **Staggered Unlocks:** This perk will level up at specific milestones of the `attAgility` attribute:
         -   Tier 1: at `attAgility` Level 3
         -   Tier 2: at `attAgility` Level 5
         -   Tier 3: at `attAgility` Level 7
         -   Tier 4: at `attAgility` Level 9
         -   Tier 5: at `attAgility` Level 10
     -   **Internal Tracking:** The `$perkagilitymastery_lbd_level` CVar is used to ensure
         each tier is only unlocked once.

     This design ensures that overall proficiency in Agility (developed by using all Agility-based
     perks) leads to the ultimate mastery of the attribute.

     ====================================================================================================
 -->
<configs>
    <append xpath="/buffs">
        <buff name="buffLBD_attAgility_MasteryChecker" hidden="true">
            <duration value="0.1"/> <!-- Very short duration, just long enough to process -->

            <!-- Log message for debugging the checker's activation. -->
            <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Agility Mastery Checker Fired. Checking for Mastery level up.">
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>

            <!-- Level 1 Mastery (at attAgility Level 3) -->
            <effect_group name="Mastery Level 1">
                <requirement name="ProgressionLevel" progression_name="attAgility" operation="Equals" value="3"/>
                <requirement name="CVarCompare" cvar="$perkagilitymastery_lbd_level" operation="LT" value="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Agility Mastery - Triggering Level Up Check (Tier 1)">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
                <triggered_effect trigger="onSelfBuffStart" action="AddBuff" buff="buffLBD_perkAgilityMastery_LevelUpCheck"/>
            </effect_group>

            <!-- Level 2 Mastery (at attAgility Level 5) -->
            <effect_group name="Mastery Level 2">
                <requirement name="ProgressionLevel" progression_name="attAgility" operation="Equals" value="5"/>
                <requirement name="CVarCompare" cvar="$perkagilitymastery_lbd_level" operation="LT" value="2"/>
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Agility Mastery - Triggering Level Up Check (Tier 2)">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
                <triggered_effect trigger="onSelfBuffStart" action="AddBuff" buff="buffLBD_perkAgilityMastery_LevelUpCheck"/>
            </effect_group>

            <!-- Level 3 Mastery (at attAgility Level 7) -->
            <effect_group name="Mastery Level 3">
                <requirement name="ProgressionLevel" progression_name="attAgility" operation="Equals" value="7"/>
                <requirement name="CVarCompare" cvar="$perkagilitymastery_lbd_level" operation="LT" value="3"/>
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Agility Mastery - Triggering Level Up Check (Tier 3)">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
                <triggered_effect trigger="onSelfBuffStart" action="AddBuff" buff="buffLBD_perkAgilityMastery_LevelUpCheck"/>
            </effect_group>

            <!-- Level 4 Mastery (at attAgility Level 9) -->
            <effect_group name="Mastery Level 4">
                <requirement name="ProgressionLevel" progression_name="attAgility" operation="Equals" value="9"/>
                <requirement name="CVarCompare" cvar="$perkagilitymastery_lbd_level" operation="LT" value="4"/>
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Agility Mastery - Triggering Level Up Check (Tier 4)">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
                <triggered_effect trigger="onSelfBuffStart" action="AddBuff" buff="buffLBD_perkAgilityMastery_LevelUpCheck">
                    <requirement name="ProgressionLevel" progression_name="attAgility" operation="Equals" value="9"/>
                    <requirement name="CVarCompare" cvar="$perkagilitymastery_lbd_level" operation="LT" value="4"/>
                </triggered_effect>
            </effect_group>

            <!-- Level 5 Mastery (at attAgility Level 10) -->
            <effect_group name="Mastery Level 5">
                <requirement name="ProgressionLevel" progression_name="attAgility" operation="Equals" value="10"/>
                <requirement name="CVarCompare" cvar="$perkagilitymastery_lbd_level" operation="LT" value="5"/>
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Agility Mastery - Triggering Level Up Check (Tier 5)">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
                <triggered_effect trigger="onSelfBuffStart" action="AddBuff" buff="buffLBD_perkAgilityMastery_LevelUpCheck">
                    <requirement name="ProgressionLevel" progression_name="attAgility" operation="Equals" value="10"/>
                    <requirement name="CVarCompare" cvar="$perkagilitymastery_lbd_level" operation="LT" value="5"/>
                </triggered_effect>
            </effect_group>
        </buff>
        <buff name="buffLBD_perkAgilityMastery_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="CanPurchasePerk, SCore" progression_name="perkAgilityMastery" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkAgilityMastery" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkagilitymastery_lbd_level" operation="add" value="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="perkAgilityMastery" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="!CanPurchasePerk, SCore" progression_name="perkAgilityMastery" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Agility Mastery - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
<configs>
    <!-- Append the LBD logic for Parkour to the main Agility Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_AgilityManager']">
        <effect_group name="Parkour">
            <!-- Master requirement: The fall must be significant enough to potentially cause damage. -->
            <requirement name="CVarCompare" cvar="_fallSpeed" operation="GTE" value=".08"/> <!-- From your example: a bit over 1.5m -->

            <!-- XP Gain: Rewarding successful falls -->
            <triggered_effect trigger="onSelfFallImpact" action="LogMessage" message="LBD DEBUG: Parkour - Attempting Fall XP Gain (+@$lbd_xp_special_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkParkour_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfFallImpact" action="ModifyCVar" cvar="$perkparkour_lbd_xp" operation="add" value="@$lbd_xp_special_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkParkour_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onSelfFallImpact" action="LogMessage" message="LBD DEBUG: Parkour - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkParkour_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfFallImpact" action="AddBuff" buff="buffLBD_perkParkour_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkParkour_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfFallImpact" action="LogMessage" message="LBD DEBUG: Parkour - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkparkour_lbd_xp" operation="GTE" value="@$perkparkour_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfFallImpact" action="AddBuff" buff="buffLBD_perkParkour_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkparkour_lbd_xp" operation="GTE" value="@$perkparkour_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Parkour. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkParkour_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="CanPurchasePerk, SCore" progression_name="perkParkour" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkParkour" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkparkour_lbd_xp" operation="subtract" value="@$perkparkour_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkparkour_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="perkParkour" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="!CanPurchasePerk, SCore" progression_name="perkParkour" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Parkour - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
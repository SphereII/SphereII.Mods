<configs>
    <!-- Append the LBD logic for Hidden Strike to the main Agility Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_AgilityManager']">
        <effect_group name="Hidden Strike">
            <!-- Master requirements for the entire group. -->
            <requirement name="CVarCompare" cvar="_crouching" operation="Equals" value="1"/>
            <requirement name="CVarCompare" cvar="_notAlerted" operation="GT" value="0" target="other"/>
      
            <!-- XP Gain -->
            <triggered_effect trigger="onSelfDamagedOther" action="LogMessage" message="LBD DEBUG: Hidden Strike - Attempting Stealth Attack XP (+@$lbd_xp_special_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkHiddenStrike_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfDamagedOther" action="ModifyCVar" cvar="$perkhiddenstrike_lbd_xp" operation="add" value="@$lbd_xp_special_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkHiddenStrike_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onSelfDamagedOther" action="LogMessage" message="LBD DEBUG: Hidden Strike - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkHiddenStrike_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfDamagedOther" action="AddBuff" buff="buffLBD_perkHiddenStrike_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkHiddenStrike_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfDamagedOther" action="LogMessage" message="LBD DEBUG: Hidden Strike - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkhiddenstrike_lbd_xp" operation="GTE" value="@$perkhiddenstrike_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfDamagedOther" action="AddBuff" buff="buffLBD_perkHiddenStrike_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkhiddenstrike_lbd_xp" operation="GTE" value="@$perkhiddenstrike_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Hidden Strike. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkHiddenStrike_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="CanPurchasePerk, SCore" progression_name="perkHiddenStrike" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkHiddenStrike" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkhiddenstrike_lbd_xp" operation="subtract" value="@$perkhiddenstrike_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkhiddenstrike_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowToolbeltMessage" message_key="perkHiddenStrikeLeveledUp"/>
            </effect_group>
            <effect_group>
                <requirement name="!CanPurchasePerk, SCore" progression_name="perkHiddenStrike" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Hidden Strike - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
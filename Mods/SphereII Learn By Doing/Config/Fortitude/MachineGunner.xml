<configs>
    <!-- Append the LBD logic for Machine Gunner to the main Fortitude Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_FortitudeManager']">
        <effect_group name="Machine Gunner">
            <!-- Master requirement for the entire group. -->
            <requirement name="HoldingItemHasTags" tags="perkMachineGunner"/>
            <requirement name="IsAlive" target="other"/>

            <!-- XP Gain -->
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="LogMessage" message="LBD DEBUG: Machine Gunner - Attempting XP Gain (@$lbd_xp_ranged_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkMachineGunner_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="ModifyCVar" cvar="$perkmachinegunner_lbd_xp" operation="add" value="@$lbd_xp_ranged_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkMachineGunner_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="LogMessage" message="LBD DEBUG: Machine Gunner - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkMachineGunner_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="AddBuff" buff="buffLBD_perkMachineGunner_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkMachineGunner_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="LogMessage" message="LBD DEBUG: Machine Gunner - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkmachinegunner_lbd_xp" operation="GTE" value="@$perkmachinegunner_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="AddBuff" buff="buffLBD_perkMachineGunner_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkmachinegunner_lbd_xp" operation="GTE" value="@$perkmachinegunner_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Machine Gunner. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkMachineGunner_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="!RequirementIsProgressionLocked, SCore" progression_name="perkMachineGunner" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkMachineGunner" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkmachinegunner_lbd_xp" operation="subtract" value="@$perkmachinegunner_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkmachinegunner_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="perkMachineGunner" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="RequirementIsProgressionLocked, SCore" progression_name="perkMachineGunner" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Machine Gunner - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
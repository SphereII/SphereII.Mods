<configs>
    <!-- Append the LBD logic for Rule #1: Cardio to the main Fortitude Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_FortitudeManager']">
        <effect_group name="Rule #1: Cardio">
            <!-- Master requirement: Player must be actively moving. -->
            <requirements compare_type="or">
                <requirement name="EntityHasMovementTag" tags="running"/>
                <requirement name="EntityHasMovementTag" tags="walking"/>
            </requirements>

            <!-- XP Gain -->
            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: Rule #1: Cardio - Attempting Run XP Gain (+@$lbd_xp_attribute_synergy_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkRuleOneCardio_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfRun" action="ModifyCVar" cvar="$perkRuleOneCardio_lbd_xp" operation="add" value="@$lbd_xp_attribute_synergy_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkRuleOneCardio_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="LogMessage" message="LBD DEBUG: Rule #1: Cardio - Attempting Walk XP Gain (+@$lbd_xp_attribute_synergy_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkRuleOneCardio_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="ModifyCVar" cvar="$perkRuleOneCardio_lbd_xp" operation="add" value="@$lbd_xp_attribute_synergy_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkRuleOneCardio_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: Rule #1: Cardio - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkRuleOneCardio_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfRun" action="AddBuff" buff="buffLBD_perkRuleOneCardio_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkRuleOneCardio_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="LogMessage" message="LBD DEBUG: Rule #1: Cardio - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkRuleOneCardio_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="AddBuff" buff="buffLBD_perkRuleOneCardio_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkRuleOneCardio_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: Rule #1: Cardio - Triggering Level Up Check (Run)">
                <requirement name="CVarCompare" cvar="$perkRuleOneCardio_lbd_xp" operation="GTE" value="@$perkRuleOneCardio_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfRun" action="AddBuff" buff="buffLBD_perkRuleOneCardio_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkRuleOneCardio_lbd_xp" operation="GTE" value="@$perkRuleOneCardio_lbd_xptonext"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="LogMessage" message="LBD DEBUG: Rule #1: Cardio - Triggering Level Up Check (Walk)">
                <requirement name="CVarCompare" cvar="$perkRuleOneCardio_lbd_xp" operation="GTE" value="@$perkRuleOneCardio_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="AddBuff" buff="buffLBD_perkRuleOneCardio_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkRuleOneCardio_lbd_xp" operation="GTE" value="@$perkRuleOneCardio_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Rule #1: Cardio. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkRuleOneCardio_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="!RequirementIsProgressionLocked, SCore" progression_name="perkRuleOneCardio" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkRuleOneCardio" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkRuleOneCardio_lbd_xp" operation="subtract" value="@$perkRuleOneCardio_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkRuleOneCardio_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="perkRuleOneCardio" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="RequirementIsProgressionLocked, SCore" progression_name="perkRuleOneCardio" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Rule #1: Cardio - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: Healing Factor - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkhealingfactor_lbd_xp" operation="GTE" value="@$perkhealingfactor_lbd_xptonext"/>

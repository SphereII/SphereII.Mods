<configs>
    <append xpath="/buffs/buff[@name='buffLBD_IntellectManager']">
        <effect_group name="LBD Crafting Skill - Vehicles">
            <triggered_effect trigger="onSelfItemCrafted" action="LogMessage" message="LBD DEBUG: Crafting Vehicles - Attempting 'Craft' XP (+@$lbd_xp_crafting_base)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingVehicles"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingVehicles_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemCrafted" action="ModifyCVar" cvar="$craftingvehicles_lbd_xp" operation="add" value="@$lbd_xp_crafting_base">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingVehicles"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingVehicles_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Vehicles - Attempting 'Repair' XP (+@$lbd_xp_repairing_base)">
                <requirement name="ItemHasTags" tags="vehicle"/> <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingVehicles_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="ModifyCVar" cvar="$craftingvehicles_lbd_xp" operation="add" value="@$lbd_xp_repairing_base">
                <requirement name="ItemHasTags" tags="vehicle"/> <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingVehicles_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemCrafted" action="LogMessage" message="LBD DEBUG: Crafting Vehicles - Applying Cooldown (Craft)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingVehicles"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingVehicles_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemCrafted" action="AddBuff" buff="buffLBD_craftingVehicles_ActionCoolDown">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingVehicles"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingVehicles_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Vehicles - Applying Cooldown (Repair)">
                <requirement name="ItemHasTags" tags="vehicle"/> <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingVehicles_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="AddBuff" buff="buffLBD_craftingVehicles_ActionCoolDown">
                <requirement name="ItemHasTags" tags="vehicle"/> <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingVehicles_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemCrafted" action="LogMessage" message="LBD DEBUG: Crafting Vehicles - Triggering Level Up Check (Craft)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingVehicles"/>
                <requirement name="CVarCompare" cvar="$craftingvehicles_lbd_xp" operation="GTE" value="@$craftingvehicles_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemCrafted" action="AddBuff" buff="buffLBD_craftingVehicles_LevelUpCheck">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingVehicles"/>
                <requirement name="CVarCompare" cvar="$craftingvehicles_lbd_xp" operation="GTE" value="@$craftingvehicles_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Vehicles - Triggering Level Up Check (Repair)">
                <requirement name="ItemHasTags" tags="vehicle"/> <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="CVarCompare" cvar="$craftingvehicles_lbd_xp" operation="GTE" value="@$craftingvehicles_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="AddBuff" buff="buffLBD_craftingVehicles_LevelUpCheck">
                <requirement name="ItemHasTags" tags="vehicle"/> <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="CVarCompare" cvar="$craftingvehicles_lbd_xp" operation="GTE" value="@$craftingvehicles_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>

   
    </append>

    <append xpath="/buffs">
        <buff name="buffLBD_craftingVehicles_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="!RequirementIsProgressionLocked, SCore" progression_name="craftingVehicles" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="craftingVehicles" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$craftingvehicles_lbd_xp" operation="subtract" value="@$craftingvehicles_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$craftingvehicles_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="craftingVehicles" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="RequirementIsProgressionLocked, SCore" progression_name="craftingVehicles" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Vehicles - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>

        <buff name="buffLBD_craftingVehicles_ActionCoolDown" hidden="true"><duration value="1"/></buff>

   
    </append>
</configs>
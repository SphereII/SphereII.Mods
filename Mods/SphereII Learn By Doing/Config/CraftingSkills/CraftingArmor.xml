<configs>
    <append xpath="/buffs">
        <buff name="buffLBD_GeneralManager" hidden="true">
            <duration value="0"/> <update_rate value="1"/> <effect_group name="LBD Crafting Skill - Armor">
            <triggered_effect trigger="onSelfItemCrafted" action="LogMessage" message="LBD DEBUG: Crafting Armor - Attempting 'Craft' XP (+@$lbd_xp_crafting_base)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemCrafted" action="ModifyCVar" cvar="$craftingarmor_lbd_xp" operation="add" value="@$lbd_xp_crafting_base">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfScrapItem" action="LogMessage" message="LBD DEBUG: Crafting Armor - Attempting 'Scrap' XP (+@$lbd_xp_scrapping_base)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfScrapItem" action="ModifyCVar" cvar="$craftingarmor_lbd_xp" operation="add" value="@$lbd_xp_scrapping_base">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Armor - Attempting 'Repair' XP (+@$lbd_xp_repairing_base)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="ModifyCVar" cvar="$craftingarmor_lbd_xp" operation="add" value="@$lbd_xp_repairing_base">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Armor - Attempting T0 Repair XP (+@$lbd_xp_repairing_base)">
                <requirement name="ProgressionLevel" progression_name="craftingArmor" operation="LTE" value="5"/>
                <requirement name="ItemHasProperty, SCore" property="ArmorGroup" prop_value="groupPrimitive"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_T0RepairCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="ModifyCVar" cvar="$craftingarmor_lbd_xp" operation="add" value="@$lbd_xp_repairing_base">
                <requirement name="ProgressionLevel" progression_name="craftingArmor" operation="LTE" value="5"/>
                <requirement name="ItemHasProperty, SCore" property="ArmorGroup" prop_value="groupPrimitive"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_T0RepairCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemCrafted" action="LogMessage" message="LBD DEBUG: Crafting Armor - Applying Cooldown (Craft)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemCrafted" action="AddBuff" buff="buffLBD_craftingArmor_ActionCoolDown">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfScrapItem" action="LogMessage" message="LBD DEBUG: Crafting Armor - Applying Cooldown (Scrap)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfScrapItem" action="AddBuff" buff="buffLBD_craftingArmor_ActionCoolDown">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Armor - Applying Cooldown (Repair)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="AddBuff" buff="buffLBD_craftingArmor_ActionCoolDown">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="AddBuff" buff="buffLBD_craftingArmor_T0RepairCoolDown">
                <requirement name="ProgressionLevel" progression_name="craftingArmor" operation="LTE" value="5"/>
                <requirement name="ItemHasProperty, SCore" property="ArmorGroup" prop_value="groupPrimitive"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingArmor_T0RepairCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemCrafted" action="LogMessage" message="LBD DEBUG: Crafting Armor - Triggering Level Up Check (Craft)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="CVarCompare" cvar="$craftingarmor_lbd_xp" operation="GTE" value="@$craftingarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemCrafted" action="AddBuff" buff="buffLBD_craftingArmor_LevelUpCheck">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="CVarCompare" cvar="$craftingarmor_lbd_xp" operation="GTE" value="@$craftingarmor_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfScrapItem" action="LogMessage" message="LBD DEBUG: Crafting Armor - Triggering Level Up Check (Scrap)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="CVarCompare" cvar="$craftingarmor_lbd_xp" operation="GTE" value="@$craftingarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfScrapItem" action="AddBuff" buff="buffLBD_craftingArmor_LevelUpCheck">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="CVarCompare" cvar="$craftingarmor_lbd_xp" operation="GTE" value="@$craftingarmor_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Armor - Triggering Level Up Check (Repair)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="CVarCompare" cvar="$craftingarmor_lbd_xp" operation="GTE" value="@$craftingarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="AddBuff" buff="buffLBD_craftingArmor_LevelUpCheck">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="CVarCompare" cvar="$craftingarmor_lbd_xp" operation="GTE" value="@$craftingarmor_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Armor - Triggering Level Up Check (T0 Repair)">
                <requirement name="ProgressionLevel" progression_name="craftingArmor" operation="LTE" value="5"/>
                <requirement name="ItemHasProperty, SCore" property="ArmorGroup" prop_value="groupPrimitive"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="CVarCompare" cvar="$craftingarmor_lbd_xp" operation="GTE" value="@$craftingarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="AddBuff" buff="buffLBD_craftingArmor_LevelUpCheck">
                <requirement name="ProgressionLevel" progression_name="craftingArmor" operation="LTE" value="5"/>
                <requirement name="ItemHasProperty, SCore" property="ArmorGroup" prop_value="groupPrimitive"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="CVarCompare" cvar="$craftingarmor_lbd_xp" operation="GTE" value="@$craftingarmor_lbd_xptonext"/>
            </triggered_effect>

        </effect_group>

            <effect_group name="LBD Decay Logic for Armor">
                <triggered_effect trigger="onSelfBuffUpdate" action="ModifyCVar"
                                  cvar="$craftingarmor_decay_counter" operation="add" value="1"/>
                <triggered_effect trigger="onSelfBuffUpdate" action="AddBuff" buff="buffLBD_craftingArmor_Decay">
                    <requirement name="CVarCompare" cvar="$craftingarmor_decay_counter" operation="GTE"
                                 value="@$lbd_decay_threshold_intervals"/>
                </triggered_effect>

                <triggered_effect trigger="onSelfItemCrafted" action="ModifyCVar"
                                  cvar="$craftingarmor_decay_counter" operation="set" value="0">
                    <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                </triggered_effect>
                <triggered_effect trigger="onSelfScrapItem" action="ModifyCVar"
                                  cvar="$craftingarmor_decay_counter" operation="set" value="0">
                    <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                </triggered_effect>
                <triggered_effect trigger="onSelfItemRepaired" action="ModifyCVar"
                                  cvar="$craftingarmor_decay_counter" operation="set" value="0">
                    <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingArmor"/>
                    <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                </triggered_effect>
                <triggered_effect trigger="onSelfItemRepaired" action="ModifyCVar" cvar="$craftingarmor_decay_counter" operation="set" value="0">
                    <requirement name="ProgressionLevel" progression_name="craftingArmor" operation="LTE" value="5"/>
                    <requirement name="ItemHasProperty, SCore" property="ArmorGroup" prop_value="groupPrimitive"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>

    <append xpath="/buffs">
        <buff name="buffLBD_craftingArmor_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="!RequirementIsProgressionLocked, SCore" progression_name="craftingArmor" />
                <requirement name="ProgressionLevel" progression_name="attGeneral" operation="GTE" value="2"/> <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="craftingArmor" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$craftingarmor_lbd_xp" operation="subtract" value="@$craftingarmor_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$craftingarmor_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="craftingArmor" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="CVarCompare" cvar="$craftingarmor_lbd_xp" operation="GTE" value="@$craftingarmor_lbd_xptonext"/> <requirement name="ProgressionLevel" progression_name="craftingArmor" operation="LTE" value="5"/> <requirement name="ProgressionLevel" progression_name="attGeneral" operation="LT" value="2"/> <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Crafting Armor - Level Up FAILED. Need higher General to advance beyond level 5.">
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            </effect_group>
            <effect_group>
                <requirement name="CVarCompare" cvar="$craftingarmor_lbd_xp" operation="GTE" value="@$craftingarmor_lbd_xptonext"/>
                <requirement name="RequirementIsProgressionLocked, SCore" progression_name="craftingArmor" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Armor - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>

        <buff name="buffLBD_craftingArmor_ActionCoolDown" hidden="true"><duration value="1"/></buff>

        <buff name="buffLBD_craftingArmor_T0RepairCoolDown" hidden="true"><duration value="5"/></buff>

        <buff name="buffLBD_craftingArmor_Decay" hidden="true">
            <stack_type value="ignore"/>
            <duration value="1"/>
            <effect_group>
                <requirement name="ProgressionLevel" progression_name="craftingArmor" operation="GT" value="0"/>
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel"
                                  progression_name="craftingArmor" level="-1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar"
                                  cvar="$craftingarmor_decay_counter" operation="set" value="0"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="craftingArmor"
                                  sound="ui_skill_decay"/>
            </effect_group>
        </buff>
    </append>
</configs>
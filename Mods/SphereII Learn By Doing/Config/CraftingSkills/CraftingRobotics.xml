<configs>
    <append xpath="/buffs/buff[@name='buffLBD_IntellectManager']">
        <effect_group name="LBD Crafting Skill - Robotics">
            <triggered_effect trigger="onSelfItemCrafted" action="LogMessage" message="LBD DEBUG: Crafting Robotics - Attempting 'Craft' XP (+@$lbd_xp_crafting_base)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingRobotics_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemCrafted" action="ModifyCVar" cvar="$craftingrobotics_lbd_xp" operation="add" value="@$lbd_xp_crafting_base">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingRobotics_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfScrapItem" action="LogMessage" message="LBD DEBUG: Crafting Robotics - Attempting 'Scrap' XP (+@$lbd_xp_scrapping_base)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingRobotics_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfScrapItem" action="ModifyCVar" cvar="$craftingrobotics_lbd_xp" operation="add" value="@$lbd_xp_scrapping_base">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingRobotics_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Robotics - Attempting 'Repair' XP (+@$lbd_xp_repairing_base)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingRobotics_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="ModifyCVar" cvar="$craftingrobotics_lbd_xp" operation="add" value="@$lbd_xp_repairing_base">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingRobotics_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemCrafted" action="LogMessage" message="LBD DEBUG: Crafting Robotics - Applying Cooldown (Craft)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingRobotics_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemCrafted" action="AddBuff" buff="buffLBD_craftingRobotics_ActionCoolDown">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingRobotics_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfScrapItem" action="LogMessage" message="LBD DEBUG: Crafting Robotics - Applying Cooldown (Scrap)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingRobotics_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfScrapItem" action="AddBuff" buff="buffLBD_craftingRobotics_ActionCoolDown">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingRobotics_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Robotics - Applying Cooldown (Repair)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingRobotics_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="AddBuff" buff="buffLBD_craftingRobotics_ActionCoolDown">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingRobotics_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemCrafted" action="LogMessage" message="LBD DEBUG: Crafting Robotics - Triggering Level Up Check (Craft)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="CVarCompare" cvar="$craftingrobotics_lbd_xp" operation="GTE" value="@$craftingrobotics_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemCrafted" action="AddBuff" buff="buffLBD_craftingRobotics_LevelUpCheck">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="CVarCompare" cvar="$craftingrobotics_lbd_xp" operation="GTE" value="@$craftingrobotics_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfScrapItem" action="LogMessage" message="LBD DEBUG: Crafting Robotics - Triggering Level Up Check (Scrap)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="CVarCompare" cvar="$craftingrobotics_lbd_xp" operation="GTE" value="@$craftingrobotics_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfScrapItem" action="AddBuff" buff="buffLBD_craftingRobotics_LevelUpCheck">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="CVarCompare" cvar="$craftingrobotics_lbd_xp" operation="GTE" value="@$craftingrobotics_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Robotics - Triggering Level Up Check (Repair)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="CVarCompare" cvar="$craftingrobotics_lbd_xp" operation="GTE" value="@$craftingrobotics_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="AddBuff" buff="buffLBD_craftingRobotics_LevelUpCheck">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingRobotics"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="CVarCompare" cvar="$craftingrobotics_lbd_xp" operation="GTE" value="@$craftingrobotics_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>

      
    </append>

    <append xpath="/buffs">
        <buff name="buffLBD_craftingRobotics_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="!RequirementIsProgressionLocked, SCore" progression_name="craftingRobotics" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="craftingRobotics" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$craftingrobotics_lbd_xp" operation="subtract" value="@$craftingrobotics_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$craftingrobotics_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="craftingRobotics" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="RequirementIsProgressionLocked, SCore" progression_name="craftingRobotics" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Robotics - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>

        <buff name="buffLBD_craftingRobotics_ActionCoolDown" hidden="true"><duration value="1"/></buff>

      
    </append>
</configs>
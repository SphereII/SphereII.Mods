<configs>
    <append xpath="/buffs/buff[@name='buffLBD_PerceptionManager']">
        <effect_group name="LBD Crafting Skill - Explosives">
            <triggered_effect trigger="onSelfItemCrafted" action="LogMessage" message="LBD DEBUG: Crafting Explosives - Attempting 'Craft' XP (+@$lbd_xp_crafting_base)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingExplosives_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemCrafted" action="ModifyCVar" cvar="$craftingexplosives_lbd_xp" operation="add" value="@$lbd_xp_crafting_base">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingExplosives_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfScrapItem" action="LogMessage" message="LBD DEBUG: Crafting Explosives - Attempting 'Scrap' XP (+@$lbd_xp_scrapping_base)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingExplosives_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfScrapItem" action="ModifyCVar" cvar="$craftingexplosives_lbd_xp" operation="add" value="@$lbd_xp_scrapping_base">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingExplosives_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Explosives - Attempting 'Repair' XP (+@$lbd_xp_repairing_base)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingExplosives_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="ModifyCVar" cvar="$craftingexplosives_lbd_xp" operation="add" value="@$lbd_xp_repairing_base">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingExplosives_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemCrafted" action="LogMessage" message="LBD DEBUG: Crafting Explosives - Applying Cooldown (Craft)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingExplosives_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemCrafted" action="AddBuff" buff="buffLBD_craftingExplosives_ActionCoolDown">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingExplosives_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfScrapItem" action="LogMessage" message="LBD DEBUG: Crafting Explosives - Applying Cooldown (Scrap)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingExplosives_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfScrapItem" action="AddBuff" buff="buffLBD_craftingExplosives_ActionCoolDown">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingExplosives_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Explosives - Applying Cooldown (Repair)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingExplosives_ActionCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="AddBuff" buff="buffLBD_craftingExplosives_ActionCoolDown">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="NotHasBuff" buff="buffLBD_craftingExplosives_ActionCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemCrafted" action="LogMessage" message="LBD DEBUG: Crafting Explosives - Triggering Level Up Check (Craft)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="CVarCompare" cvar="$craftingexplosives_lbd_xp" operation="GTE" value="@$craftingexplosives_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemCrafted" action="AddBuff" buff="buffLBD_craftingExplosives_LevelUpCheck">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="CVarCompare" cvar="$craftingexplosives_lbd_xp" operation="GTE" value="@$craftingexplosives_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfScrapItem" action="LogMessage" message="LBD DEBUG: Crafting Explosives - Triggering Level Up Check (Scrap)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="CVarCompare" cvar="$craftingexplosives_lbd_xp" operation="GTE" value="@$craftingexplosives_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfScrapItem" action="AddBuff" buff="buffLBD_craftingExplosives_LevelUpCheck">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="CVarCompare" cvar="$craftingexplosives_lbd_xp" operation="GTE" value="@$craftingexplosives_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfItemRepaired" action="LogMessage" message="LBD DEBUG: Crafting Explosives - Triggering Level Up Check (Repair)">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="CVarCompare" cvar="$craftingexplosives_lbd_xp" operation="GTE" value="@$craftingexplosives_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfItemRepaired" action="AddBuff" buff="buffLBD_craftingExplosives_LevelUpCheck">
                <requirement name="ItemHasProperty, SCore" property="UnlockedBy" prop_value="craftingExplosives"/>
                <requirement name="ItemPercentDamaged, SCore" operation="GTE" value="0.5"/>
                <requirement name="CVarCompare" cvar="$craftingexplosives_lbd_xp" operation="GTE" value="@$craftingexplosives_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>

   
    </append>

    <append xpath="/buffs">
        <buff name="buffLBD_craftingExplosives_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="!RequirementIsProgressionLocked, SCore" progression_name="craftingExplosives" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="craftingExplosives" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$craftingexplosives_lbd_xp" operation="subtract" value="@$craftingexplosives_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$craftingexplosives_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="craftingExplosives" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="RequirementIsProgressionLocked, SCore" progression_name="craftingExplosives" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Explosives - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>

        <buff name="buffLBD_craftingExplosives_ActionCoolDown" hidden="true"><duration value="1"/></buff>

    </append>
</configs>
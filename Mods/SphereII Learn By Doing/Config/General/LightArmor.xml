<configs>
    <!-- Append the LBD logic for Light Armor to the main General Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_GeneralManager']">
        <effect_group name="Light Armor">
            <!-- Master requirements for the entire group. -->
            <requirement name="EntityTagCompare" target="other" tags="walker,animal"/>
            <!-- Player must be wearing at least 3 pieces of light armor. -->
            <requirement name="CVarCompare" cvar=".ArmorLightWorn" operation="GTE" value="3"/>

            <!-- XP Gain -->
            <triggered_effect trigger="onOtherDamagedSelf" action="LogMessage" message="LBD DEBUG: Light Armor - Attempting Nimble Tank XP (+@$lbd_xp_damage_taken_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkLightArmor_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onOtherDamagedSelf" action="ModifyCVar" cvar="$perklightarmor_lbd_xp" operation="add" value="@$lbd_xp_damage_taken_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkLightArmor_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onOtherDamagedSelf" action="LogMessage" message="LBD DEBUG: Light Armor - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkLightArmor_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onOtherDamagedSelf" action="AddBuff" buff="buffLBD_perkLightArmor_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkLightArmor_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onOtherDamagedSelf" action="LogMessage" message="LBD DEBUG: Light Armor - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perklightarmor_lbd_xp" operation="GTE" value="@$perklightarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onOtherDamagedSelf" action="AddBuff" buff="buffLBD_perkLightArmor_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perklightarmor_lbd_xp" operation="GTE" value="@$perklightarmor_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
        <effect_group name="Light Armor Movement">
            <!-- Player must be wearing at least 3 pieces of Light armor. -->
            <requirement name="CVarCompare" cvar=".ArmorLightWorn" operation="GTE" value="3"/>

            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: Light Armor - Attempting XP Gain (+@$lbd_xp_damage_taken_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkLightArmor_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfRun" action="ModifyCVar" cvar="$perkLightarmor_lbd_xp" operation="add" value="@$lbd_xp_damage_taken_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkLightArmor_XPCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfWalk" action="LogMessage" message="LBD DEBUG: Light Armor - Attempting XP Gain (+@$lbd_xp_damage_taken_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkLightArmor_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="ModifyCVar" cvar="$perkLightarmor_lbd_xp" operation="add" value="@$lbd_xp_damage_taken_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkLightArmor_XPCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfRun" action="ModifyCVar" cvar="$perkLightarmor_lbd_xp" operation="add" value="@$lbd_xp_damage_taken_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkLightArmor_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="ModifyCVar" cvar="$perkLightarmor_lbd_xp" operation="add" value="@$lbd_xp_damage_taken_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkLightArmor_XPCoolDown"/>
            </triggered_effect>


            <!-- Cooldown Application -->
            <triggered_effect trigger="onSelfRun" action="AddBuff" buff="buffLBD_perkLightArmor_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkLightArmor_XPCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfWalk" action="AddBuff" buff="buffLBD_perkLightArmor_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkLightArmor_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: Light Armor - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkLightarmor_lbd_xp" operation="GTE" value="@$perkLightarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfRun" action="AddBuff" buff="buffLBD_perkLightArmor_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkLightarmor_lbd_xp" operation="GTE" value="@$perkLightarmor_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfWalk" action="LogMessage" message="LBD DEBUG: Light Armor - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkLightarmor_lbd_xp" operation="GTE" value="@$perkLightarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="AddBuff" buff="buffLBD_perkLightArmor_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkLightarmor_lbd_xp" operation="GTE" value="@$perkLightarmor_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Light Armor. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkLightArmor_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="CanPurchasePerk, SCore" progression_name="perkLightArmor" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkLightArmor" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perklightarmor_lbd_xp" operation="subtract" value="@$perklightarmor_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perklightarmor_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowToolbeltMessage" message_key="perkLightArmorLeveledUp"/>
            </effect_group>
            <effect_group>
                <requirement name="!CanPurchasePerk, SCore" progression_name="perkLightArmor" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Light Armor - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
<configs>
    <!-- Append the initializers for the General LBD perks to the global Init buff. -->
    <append xpath="/buffs/buff[@name='ProgressionLearnByDoing_Init']">
        <effect_group name="General Perk Initializers">

            <!-- Apply the permanent General Manager Buff to the player -->
            <triggered_effect trigger="onSelfBuffStart" action="AddBuff" buff="buffLBD_GeneralManager"/>

            <!-- Initializers for General Perk CVars -->

            <!-- perkMasterChef -->
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkmasterchef_lbd_xp" operation="set" value="0"/>
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkmasterchef_lbd_xptonext" operation="set" value="1500"/>

            <!-- perkLivingOffTheLand -->
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perklivingofftheland_lbd_xp" operation="set" value="0"/>
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perklivingofftheland_lbd_xptonext" operation="set" value="900"/>

            <!-- perkLockPicking -->
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perklockpicking_lbd_xp" operation="set" value="0"/>
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perklockpicking_lbd_xptonext" operation="set" value="1000"/>

            <!-- perkLuckyLooter -->
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkluckylooter_lbd_xp" operation="set" value="0"/>
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkluckylooter_lbd_xptonext" operation="set" value="1000"/>

            <!-- NEW: Initializers for Light Armor -->
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perklightarmor_lbd_xp" operation="set" value="0"/>
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perklightarmor_lbd_xptonext" operation="set" value="1200"/>

            <!-- NEW: Initializers for Medium Armor -->
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkmediumarmor_lbd_xp" operation="set" value="0"/>
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkmediumarmor_lbd_xptonext" operation="set" value="1400"/>

            <!-- NEW: Initializers for Heavy Armor -->
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkheavyarmor_lbd_xp" operation="set" value="0"/>
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkheavyarmor_lbd_xptonext" operation="set" value="1600"/>

            <!-- Bonus XP for long crafting times (Master Chef) -->
            <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$lbd_xp_masterchef_longcraft_bonus" operation="set" value="20"/>

        </effect_group>
    </append>
</configs>
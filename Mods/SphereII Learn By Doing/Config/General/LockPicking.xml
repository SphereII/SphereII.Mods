<configs>
    <!-- Append the LBD logic for Lock Picking to the main General Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_GeneralManager']">
        <effect_group name="Lock Picking">
            <!-- Master requirement: None, as the trigger itself implies success. -->

            <!-- XP Gain: Rewarding successful lockpicks -->
            <triggered_effect trigger="onSelfLockpickSuccess" action="LogMessage" message="LBD DEBUG: Lock Picking - Attempting Successful Lockpick XP (+@$lbd_xp_special_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkLockPicking_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfLockpickSuccess" action="ModifyCVar" cvar="$perklockpicking_lbd_xp" operation="add" value="@$lbd_xp_special_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkLockPicking_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onSelfLockpickSuccess" action="LogMessage" message="LBD DEBUG: Lock Picking - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkLockPicking_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfLockpickSuccess" action="AddBuff" buff="buffLBD_perkLockPicking_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkLockPicking_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfLockpickSuccess" action="LogMessage" message="LBD DEBUG: Lock Picking - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perklockpicking_lbd_xp" operation="GTE" value="@$perklockpicking_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfLockpickSuccess" action="AddBuff" buff="buffLBD_perkLockPicking_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perklockpicking_lbd_xp" operation="GTE" value="@$perklockpicking_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Lock Picking. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkLockPicking_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="!RequirementIsProgressionLocked, SCore" progression_name="perkLockPicking" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkLockPicking" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perklockpicking_lbd_xp" operation="subtract" value="@$perklockpicking_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perklockpicking_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="perkLockPicking" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="RequirementIsProgressionLocked, SCore" progression_name="perkLockPicking" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Lock Picking - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
<configs>
    <!-- Append the LBD logic for Medium Armor to the main General Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_GeneralManager']">
        <effect_group name="Medium Armor">
            <!-- Master requirements for the entire group. -->
            <requirement name="EntityTagCompare" target="other" tags="walker,animal"/>

            <!-- Player must be wearing at least 3 pieces of medium armor. -->
            <requirement name="WornItems" tags="mediumArmor" operation="GTE" value="3"/>

            <!-- XP Gain -->
            <triggered_effect trigger="onOtherDamagedSelf" action="LogMessage" message="LBD DEBUG: Medium Armor - Attempting XP Gain (+@$lbd_xp_damage_taken_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkMediumArmor_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onOtherDamagedSelf" action="ModifyCVar" cvar="$perkmediumarmor_lbd_xp" operation="add" value="@$lbd_xp_damage_taken_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkMediumArmor_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onOtherDamagedSelf" action="LogMessage" message="LBD DEBUG: Medium Armor - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkMediumArmor_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onOtherDamagedSelf" action="AddBuff" buff="buffLBD_perkMediumArmor_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkMediumArmor_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onOtherDamagedSelf" action="LogMessage" message="LBD DEBUG: Medium Armor - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkmediumarmor_lbd_xp" operation="GTE" value="@$perkmediumarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onOtherDamagedSelf" action="AddBuff" buff="buffLBD_perkMediumArmor_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkmediumarmor_lbd_xp" operation="GTE" value="@$perkmediumarmor_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>

        <effect_group name="Medium Armor Movement">
            <!-- Player must be wearing at least 3 pieces of medium armor. -->
            <requirement name="WornItems" tags="mediumArmor" operation="GTE" value="3"/>

            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: Medium Armor - Attempting XP Gain (+@$lbd_xp_attribute_synergy_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkMediumArmor_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfRun" action="ModifyCVar" cvar="$perkmediumarmor_lbd_xp" operation="add" value="@$lbd_xp_attribute_synergy_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkMediumArmor_XPCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfWalk" action="LogMessage" message="LBD DEBUG: Medium Armor - Attempting XP Gain (+@$lbd_xp_attribute_synergy_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkMediumArmor_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="ModifyCVar" cvar="$perkmediumarmor_lbd_xp" operation="add" value="@$lbd_xp_attribute_synergy_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkMediumArmor_XPCoolDown"/>
            </triggered_effect>
       
            <triggered_effect trigger="onSelfRun" action="ModifyCVar" cvar="$perkmediumarmor_lbd_xp" operation="add" value="@$lbd_xp_attribute_synergy_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkMediumArmor_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="ModifyCVar" cvar="$perkmediumarmor_lbd_xp" operation="add" value="@$lbd_xp_attribute_synergy_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkMediumArmor_XPCoolDown"/>
            </triggered_effect>


            <!-- Cooldown Application -->
            <triggered_effect trigger="onSelfRun" action="AddBuff" buff="buffLBD_perkMediumArmor_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkMediumArmor_XPCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfWalk" action="AddBuff" buff="buffLBD_perkMediumArmor_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkMediumArmor_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: Medium Armor - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkmediumarmor_lbd_xp" operation="GTE" value="@$perkmediumarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfRun" action="AddBuff" buff="buffLBD_perkMediumArmor_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkmediumarmor_lbd_xp" operation="GTE" value="@$perkmediumarmor_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfWalk" action="LogMessage" message="LBD DEBUG: Medium Armor - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkmediumarmor_lbd_xp" operation="GTE" value="@$perkmediumarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="AddBuff" buff="buffLBD_perkMediumArmor_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkmediumarmor_lbd_xp" operation="GTE" value="@$perkmediumarmor_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Medium Armor. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkMediumArmor_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="CanPurchasePerk, SCore" progression_name="perkMediumArmor" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkMediumArmor" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkmediumarmor_lbd_xp" operation="subtract" value="@$perkmediumarmor_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkmediumarmor_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowToolbeltMessage" message_key="perkMediumArmorLeveledUp"/>
            </effect_group>
            <effect_group>
                <requirement name="!CanPurchasePerk, SCore" progression_name="perkMediumArmor" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Medium Armor - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
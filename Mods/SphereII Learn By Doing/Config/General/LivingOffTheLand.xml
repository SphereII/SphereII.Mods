<configs>
    <!-- Append the LBD logic for Living Off the Land to the new General Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_GeneralManager']">
        <effect_group name="Living Off the Land">
            <!-- Master requirement: Harvesting a wild or bonus crop. -->
            <requirement name="RequirementBlockHasHarvestTags, SCore" tags="wildCropsHarvest,bonusCropHarvest"/>

            <!-- XP Gain -->
            <triggered_effect trigger="onSelfHarvestBlock" action="LogMessage" message="LBD DEBUG: Living Off the Land - Attempting Farming XP (+@$lbd_xp_harvest_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkLivingOffTheLand_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfHarvestBlock" action="ModifyCVar" cvar="$perklivingofftheland_lbd_xp" operation="add" value="@$lbd_xp_harvest_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkLivingOffTheLand_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onSelfHarvestBlock" action="LogMessage" message="LBD DEBUG: Living Off the Land - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkLivingOffTheLand_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfHarvestBlock" action="AddBuff" buff="buffLBD_perkLivingOffTheLand_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkLivingOffTheLand_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfHarvestBlock" action="LogMessage" message="LBD DEBUG: Living Off the Land - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perklivingofftheland_lbd_xp" operation="GTE" value="@$perklivingofftheland_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfHarvestBlock" action="AddBuff" buff="buffLBD_perkLivingOffTheLand_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perklivingofftheland_lbd_xp" operation="GTE" value="@$perklivingofftheland_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Living Off the Land. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkLivingOffTheLand_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="CanPurchasePerk, SCore" progression_name="perkLivingOffTheLand" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkLivingOffTheLand" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perklivingofftheland_lbd_xp" operation="subtract" value="@$perklivingofftheland_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perklivingofftheland_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="perkLivingOffTheLand" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="!CanPurchasePerk, SCore" progression_name="perkLivingOffTheLand" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Living Off the Land - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
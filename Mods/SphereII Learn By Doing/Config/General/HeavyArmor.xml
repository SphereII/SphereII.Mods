<configs>
    <!-- Append the LBD logic for Heavy Armor to the main General Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_GeneralManager']">
        <effect_group name="Heavy Armor">
            <!-- Master requirements for the entire group. -->
            <requirement name="EntityTagCompare" target="other" tags="walker,animal"/>
            <!-- Player must be wearing at least 3 pieces of heavy armor. -->
            <requirement name="CVarCompare" cvar=".ArmorHeavyWorn" operation="GTE" value="3"/>

            <!-- XP Gain -->
            <triggered_effect trigger="onOtherDamagedSelf" action="LogMessage" message="LBD DEBUG: Heavy Armor - Attempting XP Gain (+@$lbd_xp_damage_taken_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onOtherDamagedSelf" action="ModifyCVar" cvar="$perkheavyarmor_lbd_xp" operation="add" value="@$lbd_xp_damage_taken_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown"/>
            </triggered_effect>

            <!-- Cooldown Application -->
            <triggered_effect trigger="onOtherDamagedSelf" action="LogMessage" message="LBD DEBUG: Heavy Armor - Applying Cooldown">
                <requirement name="NotHasBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onOtherDamagedSelf" action="AddBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onOtherDamagedSelf" action="LogMessage" message="LBD DEBUG: Heavy Armor - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkheavyarmor_lbd_xp" operation="GTE" value="@$perkheavyarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onOtherDamagedSelf" action="AddBuff" buff="buffLBD_perkHeavyArmor_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkheavyarmor_lbd_xp" operation="GTE" value="@$perkheavyarmor_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>

        <effect_group name="Heavy Armor Movement">
            <!-- Player must be wearing at least 3 pieces of Heavy armor. -->
            <requirement name="CVarCompare" cvar=".ArmorHeavyWorn" operation="GTE" value="3"/>

            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: Heavy Armor - Attempting XP Gain (+@$lbd_xp_damage_taken_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfRun" action="ModifyCVar" cvar="$perkHeavyarmor_lbd_xp" operation="add" value="@$lbd_xp_damage_taken_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfWalk" action="LogMessage" message="LBD DEBUG: Heavy Armor - Attempting XP Gain (+@$lbd_xp_damage_taken_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="ModifyCVar" cvar="$perkHeavyarmor_lbd_xp" operation="add" value="@$lbd_xp_damage_taken_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfRun" action="ModifyCVar" cvar="$perkHeavyarmor_lbd_xp" operation="add" value="@$lbd_xp_damage_taken_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="ModifyCVar" cvar="$perkHeavyarmor_lbd_xp" operation="add" value="@$lbd_xp_damage_taken_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown"/>
            </triggered_effect>


            <!-- Cooldown Application -->
            <triggered_effect trigger="onSelfRun" action="AddBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfWalk" action="AddBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkHeavyArmor_XPCoolDown"/>
            </triggered_effect>

            <!-- Level Up Check -->
            <triggered_effect trigger="onSelfRun" action="LogMessage" message="LBD DEBUG: Heavy Armor - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkHeavyarmor_lbd_xp" operation="GTE" value="@$perkHeavyarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfRun" action="AddBuff" buff="buffLBD_perkHeavyArmor_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkHeavyarmor_lbd_xp" operation="GTE" value="@$perkHeavyarmor_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfWalk" action="LogMessage" message="LBD DEBUG: Heavy Armor - Triggering Level Up Check">
                <requirement name="CVarCompare" cvar="$perkHeavyarmor_lbd_xp" operation="GTE" value="@$perkHeavyarmor_lbd_xptonext"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="AddBuff" buff="buffLBD_perkHeavyArmor_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkHeavyarmor_lbd_xp" operation="GTE" value="@$perkHeavyarmor_lbd_xptonext"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Heavy Armor. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkHeavyArmor_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="CanPurchasePerk, SCore" progression_name="perkHeavyArmor" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkHeavyArmor" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkheavyarmor_lbd_xp" operation="subtract" value="@$perkheavyarmor_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkheavyarmor_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="perkHeavyArmor" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="!CanPurchasePerk, SCore" progression_name="perkHeavyArmor" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Heavy Armor - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
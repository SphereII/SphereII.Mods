    <!-- Append the activity reset logic to the main Strength Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_StrengthManager']">
        <effect_group name="LBD Decay Activity Resets">
            <!-- Reset Decay Counter on attStrength Activity -->
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="ModifyCVar" cvar="$attstrength_decay_counter" operation="set" value="0">
                <requirement name="HoldingItemHasTags" tags="attStrength"/>
                <requirement name="IsAlive" target="other"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfDestroyedBlock" action="ModifyCVar" cvar="$attstrength_decay_counter" operation="set" value="0">
                <requirement name="HoldingItemHasTags" tags="miningTool"/>
                <requirement name="RequirementBlockHasHarvestTags, SCore" tags="oreWoodHarvest"/>
            </triggered_effect>

            <!-- Reset Decay Counter on perkBoomstick Activity -->
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="ModifyCVar" cvar="$perkboomstick_decay_counter" operation="set" value="0">
                <requirement name="HoldingItemHasTags" tags="perkBoomstick"/>
                <requirement name="IsAlive" target="other"/>
            </triggered_effect>

            <!-- Reset Decay Counter on perkPummelPete Activity -->
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="ModifyCVar" cvar="$perkpummelpete_decay_counter" operation="set" value="0">
                <requirement name="HoldingItemHasTags" tags="perkPummelPete"/>
                <requirement name="IsAlive" target="other"/>
            </triggered_effect>

            <!-- Reset Decay Counter on perkSkullCrusher Activity -->
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="ModifyCVar" cvar="$perkskullcrusher_decay_counter" operation="set" value="0">
                <requirement name="HoldingItemHasTags" tags="perkSkullCrusher"/>
                <requirement name="IsAlive" target="other"/>
            </triggered_effect>

            <!-- Reset Decay Counter on perkGrandSlam Activity -->
            <triggered_effect trigger="onSelfSecondaryActionRayHit" action="ModifyCVar" cvar="$perkgrandslam_decay_counter" operation="set" value="0">
                <requirement name="HoldingItemHasTags" tags="perkPummelPete,perkSkullCrusher"/>
                <requirement name="EntityHasMovementTag" tags="running"/>
                <requirement name="IsAlive" target="other"/>
            </triggered_effect>

            <!-- Reset Decay Counter on perkFlurryOfBlows Activity -->
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="ModifyCVar" cvar="$perkflurryofblows_decay_counter" operation="set" value="0">
                <requirement name="HoldingItemHasTags" tags="perkPummelPete,perkSkullCrusher"/>
                <requirement name="IsAlive" target="other"/>
            </triggered_effect>

            <!-- Reset Decay Counter on perkMiner69r Activity -->
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="ModifyCVar" cvar="$perkminer69r_decay_counter" operation="set" value="0">
                <requirement name="HoldingItemHasTags" tags="miningTool"/>
                <requirement name="RequirementBlockHasHarvestTags, SCore" tags="allHarvest,oreWoodHarvest"/>
            </triggered_effect>

            <!-- Reset Decay Counter on perkMotherLode Activity -->
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="ModifyCVar" cvar="$perkmotherlode_decay_counter" operation="set" value="0">
                <requirement name="HoldingItemHasTags" tags="miningTool"/>
                <requirement name="RequirementBlockHasHarvestTags, SCore" tags="oreWoodHarvest"/>
            </triggered_effect>

            <!-- Reset Decay Counter on perkJunkMiner Activity -->
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="ModifyCVar" cvar="$perkjunkminer_decay_counter" operation="set" value="0">
                <requirement name="HoldingItemHasTags" tags="miningTool"/>
                <requirement name="RequirementBlockHasHarvestTags, SCore" tags="perkJunkMiner"/>
            </triggered_effect>

            <!-- Reset Decay Counter on perkPackMule Activity -->
            <triggered_effect trigger="onSelfRun" action="ModifyCVar" cvar="$perkpackmule_decay_counter" operation="set" value="0">
                <requirement name="HasBuff" buff="buffEncumberedInv"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfWalk" action="ModifyCVar" cvar="$perkpackmule_decay_counter" operation="set" value="0">
                <requirement name="HasBuff" buff="buffEncumberedInv"/>
            </triggered_effect>

            <!-- Reset Decay Counter on perkStrengthMastery Activity -->
            <triggered_effect trigger="onSelfDestroyedBlock" action="ModifyCVar" cvar="$perkstrengthmastery_decay_counter" operation="set" value="0">
                <requirement name="HoldingItemHasTags" tags="miningTool"/>
                <requirement name="RequirementBlockHasHarvestTags, SCore" tags="oreWoodHarvest"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfDamagedOther" action="ModifyCVar" cvar="$perkstrengthmastery_decay_counter" operation="set" value="0">
                <requirements compare_type="or">
                    <requirement name="HoldingItemHasTags" tags="attStrength"/>
                    <requirement name="HoldingItemHasTags" tags="miningTool"/>
                </requirements>
                <requirements compare_type="or">
                    <requirement name="CVarCompare" cvar="_stunned" operation="GT" value="0" target="other"/>
                    <requirement name="CVarCompare" cvar="_knocked_down" operation="GT" value="0" target="other"/>
                </requirements>
            </triggered_effect>
        </effect_group>
    </append>
</configs>

<configs>
    <!-- Append the LBD logic for Flurry of Blows to the main Strength Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_StrengthManager']">
        <effect_group name="Flurry of Blows">
            <requirement name="HoldingItemHasTags" tags="perkPummelPete,perkSkullCrusher"/>
            <requirement name="IsAlive" target="other"/>

            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="ModifyCVar" cvar="$perkflurryofblows_lbd_xp" operation="add" value="@$lbd_xp_flurry_bonus">
                <requirement name="HasBuff" buff="buffLBD_Flurry_ComboWindow_Strength"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfSecondaryActionRayHit" action="ModifyCVar" cvar="$perkflurryofblows_lbd_xp" operation="add" value="@$lbd_xp_flurry_bonus">
                <requirement name="HasBuff" buff="buffLBD_Flurry_ComboWindow_Strength"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="AddBuff" buff="buffLBD_Flurry_ComboWindow_Strength"/>
            <triggered_effect trigger="onSelfSecondaryActionRayHit" action="AddBuff" buff="buffLBD_Flurry_ComboWindow_Strength"/>

            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="AddBuff" buff="buffLBD_perkFlurryOfBlows_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkflurryofblows_lbd_xp" operation="GTE" value="@$perkflurryofblows_lbd_xptonext"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfSecondaryActionRayHit" action="AddBuff" buff="buffLBD_perkFlurryOfBlows_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkflurryofblows_lbd_xp" operation="GTE" value="@$perkflurryofblows_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="LogMessage" message="LBD DEBUG: Flurry of Blows Primary - COMBO HIT! Applying Bonus XP (+@$lbd_xp_flurry_bonus)">
                <requirement name="HasBuff" buff="buffLBD_Flurry_ComboWindow_Strength"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfSecondaryActionRayHit" action="LogMessage" message="LBD DEBUG: Flurry of Blows Power - COMBO HIT! Applying Bonus XP (+@$lbd_xp_flurry_bonus)">
                <requirement name="HasBuff" buff="buffLBD_Flurry_ComboWindow_Strength"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="LogMessage" message="LBD DEBUG: Flurry of Blows Primary - Starting/Refreshing Combo Window">
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfSecondaryActionRayHit" action="LogMessage" message="LBD DEBUG: Flurry of Blows Power - Starting/Refreshing Combo Window">
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler and the Combo Window buff. -->
    <append xpath="/buffs">
        <!-- The temporary buff that creates the combo window. 'stack_type="replace"' is CRITICAL. -->
        <buff name="buffLBD_Flurry_ComboWindow_Strength" hidden="true">
            <stack_type value="replace"/>
            <duration value="2"/>
        </buff>

        <buff name="buffLBD_perkFlurryOfBlows_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="CanPurchasePerk, SCore" progression_name="perkFlurryOfBlows" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkFlurryOfBlows" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkflurryofblows_lbd_xp" operation="subtract" value="@$perkflurryofblows_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkflurryofblows_lbd_xptonext" operation="multiply" value="@$lbd_xp_curve_multiplier"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowToolbeltMessage" message_key="perkFlurryOfBlowsLeveledUp"/>
            </effect_group>
            <effect_group>
                <requirement name="!CanPurchasePerk, SCore" progression_name="perkFlurryOfBlows" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Flurry of Blows - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>
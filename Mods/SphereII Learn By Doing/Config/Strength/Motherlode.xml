<configs>
    <!-- Append the LBD logic for Mother Lode to the main Strength Manager buff. -->
    <append xpath="/buffs/buff[@name='buffLBD_StrengthManager']">
        <!-- Group for Mother Lode Perk -->
        <effect_group name="Mother Lode">
            <requirement name="HoldingItemHasTags" tags="miningTool"/>
            <requirement name="RequirementBlockHasHarvestTags, SCore" tags="oreWoodHarvest"/>

            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="ModifyCVar" cvar="$perkmotherlode_lbd_xp" operation="add" value="@$lbd_xp_melee_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkMotherLode_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="AddBuff" buff="buffLBD_perkMotherLode_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkMotherLode_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="AddBuff" buff="buffLBD_perkMotherLode_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkmotherlode_lbd_xp" operation="GTE" value="@$perkmotherlode_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfSecondaryActionRayHit" action="ModifyCVar" cvar="$perkmotherlode_lbd_xp" operation="add" value="@$lbd_xp_melee_power_base">
                <requirement name="NotHasBuff" buff="buffLBD_perkMotherLode_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfSecondaryActionRayHit" action="AddBuff" buff="buffLBD_perkMotherLode_XPCoolDown">
                <requirement name="NotHasBuff" buff="buffLBD_perkMotherLode_XPCoolDown"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfSecondaryActionRayHit" action="AddBuff" buff="buffLBD_perkMotherLode_LevelUpCheck">
                <requirement name="CVarCompare" cvar="$perkmotherlode_lbd_xp" operation="GTE" value="@$perkmotherlode_lbd_xptonext"/>
            </triggered_effect>

            <triggered_effect trigger="onSelfPrimaryActionRayHit" action="LogMessage" message="LBD DEBUG: Mother Lode Primary - Attempting XP Gain (+@$lbd_xp_melee_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkMotherLode_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
            <triggered_effect trigger="onSelfSecondaryActionRayHit" action="LogMessage" message="LBD DEBUG: Mother Lode Power - Attempting XP Gain (+@$lbd_xp_melee_power_base)">
                <requirement name="NotHasBuff" buff="buffLBD_perkMotherLode_XPCoolDown"/>
                <requirement name="HasBuff" buff="god"/>
            </triggered_effect>
        </effect_group>
    </append>

    <!-- Define the Level-Up Handler buff for Mother Lode. -->
    <append xpath="/buffs">
        <buff name="buffLBD_perkMotherLode_LevelUpCheck" hidden="true">
            <stack_type value="ignore"/><duration value="1"/>
            <effect_group>
                <requirement name="CanPurchasePerk, SCore" progression_name="perkMotherLode" />
                <triggered_effect trigger="onSelfBuffStart" action="AddProgressionLevel" progression_name="perkMotherLode" level="1"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkmotherlode_lbd_xp" operation="subtract" value="@$perkmotherlode_lbd_xptonext"/>
                <triggered_effect trigger="onSelfBuffStart" action="ModifyCVar" cvar="$perkmotherlode_lbd_xptonext" operation="multiply" value="1.2"/>
                <triggered_effect trigger="onSelfBuffStart" action="ShowPerkLevelUp, SCore" perk="perkMotherLode" sound="read_skillbook_final" />
            </effect_group>
            <effect_group>
                <requirement name="!CanPurchasePerk, SCore" progression_name="perkMotherLode" />
                <triggered_effect trigger="onSelfBuffStart" action="LogMessage" message="LBD DEBUG: Mother Lode - Level Up FAILED. Perk is locked by requirements.">
                    <requirement name="HasBuff" buff="god"/>
                </triggered_effect>
            </effect_group>
        </buff>
    </append>
</configs>